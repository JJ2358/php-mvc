{# admin_dashboard.twig #}

{% extends 'base.twig' %}

{% block content %}
    <div class="admin-bar bg-blue-600 text-white p-4 flex justify-end">
        <a href="/admin" class="mr-4">Dashboard</a>
        <a href="/logout">Logout</a>
    </div>
    <div>
        <!-- Place the button for fetching jobs here -->
        <form action="/admin/fetch-jobs" method="post">
            <button type="submit" class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded">
                Fetch Jobs from API
            </button>
        </form>
    </div>

    {% if flash_message %}
        <div class="alert alert-success">
            {{ flash_message }}
        </div>
    {% endif %}

    <!-- Include additional admin content here -->
{% endblock %}
