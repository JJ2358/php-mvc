{% extends 'base.twig' %}

{% block content %}
<div class="container mx-auto px-4 sm:px-6 lg:px-8 my-8">
    <h1 class="text-2xl font-bold mb-8 text-center">Jobs</h1>

    {% if errorMessage %}
        <div class="text-center text-red-500">{{ errorMessage }}</div>
    {% else %}
        <div class="space-y-6">
            {% if jobs|length > 0 %}
            {% for job in jobs %}
            <div class="p-6 bg-white shadow-lg rounded-md">
                <h2 class="text-2xl font-semibold text-gray-800 mb-2">{{ job.title }}</h2>
                <p class="text-gray-500 mb-4">{{ job.location }} - {{ job.start_date|date('F j, Y') }}</p>
                <p class="text-gray-700 mb-4">{{ job.description|slice(0, 150) }}...</p>
                <a href="/jobs/{{ job.id }}" class="text-blue-600 hover:underline">View</a>
            </div>
                {% endfor %}
                {% include 'partials/pagination.twig' %}
            {% else %}
                <p class="text-center text-gray-500">No server-side jobs available at the moment.</p>
            {% endif %}
        </div>
    {% endif %}
</div>
{% endblock %}
