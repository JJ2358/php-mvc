{% extends 'base.twig' %}

{% block content %}
<div class="min-h-screen bg-gray-100 py-10">
    <div class="container mx-auto px-4 lg:px-20 xl:px-40 2xl:px-80">
        <div class="mb-4 text-blue-500">
            <a href="/" class="hover:text-blue-600">‚Üê View All Jobs</a>
        </div>

        <div class="bg-white p-12 shadow rounded-lg">
            <h1 class="text-3xl font-bold mb-6">{{ job.title }}</h1>

            <div class="mb-4">
                <h2 class="text-xl font-semibold">Job Details:</h2>
                <p><strong>Location:</strong> {{ job.location }}</p>
                <p><strong>Start Date:</strong> {{ job.start_date|date('m/d/Y') }}</p>
                <p><strong>Contact Email:</strong> {{ job.contact_email }}</p>
            </div>

            <p class="whitespace-pre-line text-gray-700 mb-6">{{ job.description }}</p>

            <div class="mt-10">
                <h2 class="text-2xl font-bold mb-4">Apply for this job</h2>
                <form action="/apply-for-job/{{ job.id }}" method="post" enctype="multipart/form-data">
                    <div class="mb-6">
                        <label for="name" class="block text-sm font-medium text-gray-700 mb-2">Your Name</label>
                        <input type="text" id="name" name="name" placeholder="Your Name" required class="form-input mt-1 block w-full" />
                    </div>
                    <div class="mb-6">
                        <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Your Email</label>
                        <input type="email" id="email" name="email" placeholder="Your Email" required class="form-input mt-1 block w-full" />
                    </div>
                    <div class="mb-6">
                        <label for="resume" class="block text-sm font-medium text-gray-700 mb-2">Upload Your Resume</label>
                        <input type="file" id="resume" name="resume" accept=".pdf,.doc,.docx" required class="form-input mt-1 block w-full" />
                    </div>
                    <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded">
                        Apply for this job
                    </button>
                    {% if flash_message %}
                    <div class="alert alert-success">
                        {{ flash_message }}
                    </div>
                    {% set flash_message = null %} {# Clear the message after displaying it #}
                    {% endif %}
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
