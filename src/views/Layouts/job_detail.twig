{% extends 'base.twig' %}

{% block content %}
<div class="container mx-auto p-4">
    <h1 class="text-3xl font-bold mb-4">{{ job.title }}</h1>
    <p class="mb-2"><strong>Location:</strong> {{ job.location }}</p>
    <p class="mb-2"><strong>Start Date:</strong> {{ job.start_date|date('m/d/Y') }}</p>
    <p class="mb-2"><strong>Description:</strong> {{ job.description }}</p>

    <h2 class="text-2xl font-bold mt-6 mb-4">Apply for this job</h2>
    <form action="/apply-for-job/{{ job.id }}" method="post" enctype="multipart/form-data">
        <input type="text" name="name" placeholder="Your Name" required class="block mb-2" />
        <input type="email" name="email" placeholder="Your Email" required class="block mb-2" />
        <input type="file" name="resume" accept=".pdf,.doc,.docx" required class="block mb-4" />
        <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded">
            Submit Application
        </button>
    </form>
</div>
{% endblock %}
