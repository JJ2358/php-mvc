{% extends 'base.twig' %}

{% block content %}
<div class="container mx-auto p-4">
    <a href="/jobs" class="text-blue-500 hover:text-blue-600">View All Jobs</a>
    <div class="mt-8">
        <h1 class="text-3xl font-bold mb-4">{{ job.title }}</h1>
        <p class="mb-6">{{ job.description }}</p>
    </div>

    <h2 class="text-2xl font-bold mt-6 mb-4">Apply for this job</h2>
    <form action="/apply-for-job/{{ job.id }}" method="post" enctype="multipart/form-data" class="mb-8">
        <div class="mb-4">
            <label for="name" class="block text-sm font-medium text-gray-700">Your Name</label>
            <input type="text" id="name" name="name" placeholder="Your Name" required class="mt-1 block w-full" />
        </div>
        <div class="mb-4">
            <label for="email" class="block text-sm font-medium text-gray-700">Your Email</label>
            <input type="email" id="email" name="email" placeholder="Your Email" required class="mt-1 block w-full" />
        </div>
        <div class="mb-6">
            <label for="resume" class="block text-sm font-medium text-gray-700">Upload Your Resume</label>
            <input type="file" id="resume" name="resume" accept=".pdf,.doc,.docx" required class="mt-1 block w-full" />
        </div>
        <input type="hidden" name="contact_email" value="{{ job.contact_email }}" />
        <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded">
            Apply for this job
        </button>
    </form>
</div>
{% endblock %}
